<div class="container p-4">
      <div class="row">
          <div class="col-md-4 mx-auto">
              <div class="card ">
                  <div class="card-body">
                     <form action="/clientes/editar_cliente/{{editarcliente.CLN_ID}}" method="POST">
                       <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_NOMBRE}}" class="form-control" name="cln_nombre" placeholder="Nombre" autofocus>
                       </div>
                        <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_APELLIDO}}" class="form-control" name="cln_apellido" placeholder="Apellido" >
                       </div>
                       <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_EDAD}}" class="form-control" name="cln_edad" placeholder="Edad" >
                       </div>
                        <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_CEDULA}}" class="form-control" name="cln_celular" placeholder="Celular" >
                       </div>
                       <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_CORREO}}" class="form-control" name="cln_correo" placeholder="Correo" >
                       </div>
                       <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_FECHANAC}}" class="form-control" name="cln_fechanac" placeholder="Fecha de Nacimiento" >
                       </div>
                        <div class="form-group">
                          <input type="text" value="{{editarcliente.CLN_CEDULA}}" class="form-control" name="cln_cedula" placeholder="Cedula" >
                       </div>
                       <div class="form-group">
                          <textarea  name="cln_observaciones" row="2" class="form-control" placeholder="Observaciones" >{{editarcliente.CLN_OBSERVACIONES}}</textarea>
                       </div>
                       <div class="form-group">
                           <button class="btn btn-success btn-block">Guardar</button>
                       </div>
                     </form>
                  </div>
              </div>
          </div>
      </div>
</div>